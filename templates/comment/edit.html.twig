{% extends 'base.html.twig' %}

{% block title %}Modifier le commentaire{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-light text-dark border-bottom">
                    <h2 class="mb-0">
                        <i class="fas fa-edit me-2 text-muted"></i>Modifier le commentaire
                    </h2>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    
                    <div class="mb-3">
                        {{ form_label(form.content, 'Commentaire', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'Modifiez votre commentaire...'}}) }}
                        {{ form_errors(form.content) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_task_show', {'id': comment.task.id}) }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour à la tâche
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-2"></i>Enregistrer les modifications
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 