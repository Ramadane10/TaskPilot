{% extends 'base.html.twig' %}

{% block title %}Tâches - TaskPilot{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h3 mb-0">
                <i class="fas fa-tasks me-2 text-success"></i>Tâches
            </h1>
            <p class="text-muted">Gérez vos tâches et suivez leur progression</p>
        </div>
        <a href="{{ path('app_task_new') }}" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>Nouvelle Tâche
        </a>
    </div>
</div>

{% if tasks|length > 0 %}
    <div class="row">
        {% for task in tasks %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title mb-0">{{ task.title }}</h5>
                            <span class="badge 
                                {% if task.status == 'todo' %}bg-secondary
                                {% elseif task.status == 'in_progress' %}bg-warning
                                {% elseif task.status == 'review' %}bg-info
                                {% else %}bg-success{% endif %}">
                                {% if task.status == 'todo' %}À faire
                                {% elseif task.status == 'in_progress' %}En cours
                                {% elseif task.status == 'review' %}En révision
                                {% else %}Terminé{% endif %}
                            </span>
                        </div>
                        
                        <p class="card-text text-muted">
                            {{ task.description|slice(0, 100) }}{% if task.description|length > 100 %}...{% endif %}
                        </p>
                        
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-calendar me-1"></i>Créée le {{ task.createdAt|date('d/m/Y') }}
                            </small>
                            {% if task.dueDate %}
                                <br><small class="text-muted">
                                    <i class="fas fa-clock me-1"></i>Échéance : {{ task.dueDate|date('d/m/Y') }}
                                </small>
                            {% endif %}
                        </div>
                        
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-flag me-1"></i>Priorité : 
                                <span class="badge 
                                    {% if task.priority == 'low' %}bg-success
                                    {% elseif task.priority == 'medium' %}bg-warning
                                    {% elseif task.priority == 'high' %}bg-danger
                                    {% else %}bg-dark{% endif %}">
                                    {% if task.priority == 'low' %}Faible
                                    {% elseif task.priority == 'medium' %}Moyenne
                                    {% elseif task.priority == 'high' %}Élevée
                                    {% else %}Urgente{% endif %}
                                </span>
                            </small>
                            {% if task.project %}
                                <br><small class="text-muted">
                                    <i class="fas fa-project-diagram me-1"></i>{{ task.project.name }}
                                </small>
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_task_show', {'id': task.id}) }}" class="btn btn-outline-success btn-sm">
                                <i class="fas fa-eye me-1"></i>Voir
                            </a>
                            <div>
                                <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-outline-warning btn-sm">
                                    <i class="fas fa-edit me-1"></i>Modifier
                                </a>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <form method="post" action="{{ path('app_task_delete', {'id': task.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette tâche ?')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-trash me-1"></i>Supprimer
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="text-center py-5">
        <i class="fas fa-tasks fa-4x text-muted mb-3"></i>
        <h4 class="text-muted">Aucune tâche</h4>
        <p class="text-muted">Commencez par créer votre première tâche !</p>
        <a href="{{ path('app_task_new') }}" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>Créer une tâche
        </a>
    </div>
{% endif %}
{% endblock %}
