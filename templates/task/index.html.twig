{% extends 'base.html.twig' %}

{% block title %}T√¢ches - TaskPilot{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h3 mb-0">
                <i class="fas fa-tasks me-2 text-success"></i>T√¢ches
            </h1>
            <p class="text-muted">G√©rez vos t√¢ches et suivez leur progression</p>
        </div>
        <a href="{{ path('app_task_new') }}" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>Nouvelle T√¢che
        </a>
    </div>
</div>

<!-- Filtres et statistiques -->
<div class="row mb-4">
    <div class="col-md-8">
        <div class="btn-group me-2" role="group">
            <a href="{{ path('app_task_index') }}" class="btn btn-outline-primary {{ app.request.query.get('priority') is null and app.request.query.get('due') is null ? 'active' : '' }}">
                <i class="fas fa-list me-1"></i>Toutes
            </a>
            <a href="{{ path('app_task_index', {'priority': 'urgent'}) }}" class="btn btn-outline-dark {{ app.request.query.get('priority') == 'urgent' ? 'active' : '' }}">
                <i class="fas fa-exclamation-triangle me-1"></i>Urgentes
            </a>
            <a href="{{ path('app_task_index', {'priority': 'high'}) }}" class="btn btn-outline-danger {{ app.request.query.get('priority') == 'high' ? 'active' : '' }}">
                <i class="fas fa-arrow-up me-1"></i>√âlev√©es
            </a>
            <a href="{{ path('app_task_index', {'priority': 'medium'}) }}" class="btn btn-outline-warning {{ app.request.query.get('priority') == 'medium' ? 'active' : '' }}">
                <i class="fas fa-minus me-1"></i>Moyennes
            </a>
            <a href="{{ path('app_task_index', {'priority': 'low'}) }}" class="btn btn-outline-success {{ app.request.query.get('priority') == 'low' ? 'active' : '' }}">
                <i class="fas fa-arrow-down me-1"></i>Faibles
            </a>
        </div>
        
        <div class="btn-group" role="group">
            <a href="{{ path('app_task_index', {'due': 'overdue'}) }}" class="btn btn-outline-danger {{ app.request.query.get('due') == 'overdue' ? 'active' : '' }}">
                <i class="fas fa-exclamation-circle me-1"></i>En retard
            </a>
            <a href="{{ path('app_task_index', {'due': 'today'}) }}" class="btn btn-outline-warning {{ app.request.query.get('due') == 'today' ? 'active' : '' }}">
                <i class="fas fa-calendar-day me-1"></i>Aujourd'hui
            </a>
            <a href="{{ path('app_task_index', {'due': 'week'}) }}" class="btn btn-outline-info {{ app.request.query.get('due') == 'week' ? 'active' : '' }}">
                <i class="fas fa-calendar-week me-1"></i>Cette semaine
            </a>
        </div>
    </div>
    <div class="col-md-4">
        <div class="d-flex justify-content-end">
            <div class="text-end">
                <small class="text-muted">T√¢ches affich√©es : <strong>{{ tasks|length }}</strong></small>
                {% if tasks|length > 0 %}
                    <br><small class="text-muted">
                        {% set urgentCount = tasks|filter(t => t.priority == 'urgent')|length %}
                        {% set highCount = tasks|filter(t => t.priority == 'high')|length %}
                        {% set overdueCount = tasks|filter(t => t.dueDate and t.dueDate < date() and t.status != 'done')|length %}
                        {% if urgentCount > 0 %}<span class="text-dark">‚ö´ {{ urgentCount }} urgentes</span>{% endif %}
                        {% if highCount > 0 %}<span class="text-danger">üî¥ {{ highCount }} √©lev√©es</span>{% endif %}
                        {% if overdueCount > 0 %}<span class="text-danger">‚è∞ {{ overdueCount }} en retard</span>{% endif %}
                    </small>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% if tasks|length > 0 %}
    <div class="row">
        {% for task in tasks %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title mb-0">{{ task.title }}</h5>
                            <span class="badge 
                                {% if task.status == 'todo' %}bg-secondary
                                {% elseif task.status == 'in_progress' %}bg-warning
                                {% elseif task.status == 'review' %}bg-info
                                {% else %}bg-success{% endif %}">
                                {% if task.status == 'todo' %}√Ä faire
                                {% elseif task.status == 'in_progress' %}En cours
                                {% elseif task.status == 'review' %}En r√©vision
                                {% else %}Termin√©{% endif %}
                            </span>
                        </div>
                        
                        <p class="card-text text-muted">
                            {{ task.description|slice(0, 100) }}{% if task.description|length > 100 %}...{% endif %}
                        </p>
                        
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-calendar me-1"></i>Cr√©√©e le {{ task.createdAt|date('d/m/Y') }}
                            </small>
                            {% if task.dueDate %}
                                <br><small class="
                                    {% if task.dueDate < date() and task.status != 'done' %}text-danger fw-bold
                                    {% elseif task.dueDate|date('U') < date('U') + 86400 and task.status != 'done' %}text-warning fw-bold
                                    {% elseif task.dueDate|date('U') < date('U') + 604800 and task.status != 'done' %}text-info
                                    {% else %}text-muted{% endif %}">
                                    <i class="fas fa-clock me-1"></i>√âch√©ance : {{ task.dueDate|date('d/m/Y') }}
                                    {% if task.dueDate < date() and task.status != 'done' %}
                                        <span class="badge bg-danger ms-1">En retard !</span>
                                    {% elseif task.dueDate|date('U') < date('U') + 86400 and task.status != 'done' %}
                                        <span class="badge bg-warning ms-1">Aujourd'hui</span>
                                    {% elseif task.dueDate|date('U') < date('U') + 604800 and task.status != 'done' %}
                                        <span class="badge bg-info ms-1">Cette semaine</span>
                                    {% endif %}
                                </small>
                            {% endif %}
                        </div>
                        
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-flag me-1"></i>Priorit√© : 
                                <span class="badge 
                                    {% if task.priority == 'low' %}bg-success
                                    {% elseif task.priority == 'medium' %}bg-warning
                                    {% elseif task.priority == 'high' %}bg-danger
                                    {% else %}bg-dark{% endif %}">
                                    {% if task.priority == 'low' %}Faible
                                    {% elseif task.priority == 'medium' %}Moyenne
                                    {% elseif task.priority == 'high' %}√âlev√©e
                                    {% else %}Urgente{% endif %}
                                </span>
                            </small>
                            {% if task.project %}
                                <br><small class="text-muted">
                                    <i class="fas fa-project-diagram me-1"></i>{{ task.project.name }}
                                </small>
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_task_show', {'id': task.id}) }}" class="btn btn-outline-success btn-sm">
                                <i class="fas fa-eye me-1"></i>Voir
                            </a>
                            <div>
                                <!-- Boutons d'action rapide pour le statut -->
                                {% if task.status != 'done' %}
                                    <div class="btn-group btn-group-sm me-2" role="group">
                                        {% if task.status == 'todo' %}
                                            <form method="post" action="{{ path('app_task_update_status', {'id': task.id, 'status': 'in_progress'}) }}" style="display: inline;">
                                                <button type="submit" class="btn btn-warning btn-sm" title="D√©marrer la t√¢che">
                                                    <i class="fas fa-play"></i>
                                                </button>
                                            </form>
                                        {% elseif task.status == 'in_progress' %}
                                            <form method="post" action="{{ path('app_task_update_status', {'id': task.id, 'status': 'review'}) }}" style="display: inline;">
                                                <button type="submit" class="btn btn-info btn-sm" title="Mettre en r√©vision">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </form>
                                        {% elseif task.status == 'review' %}
                                            <form method="post" action="{{ path('app_task_update_status', {'id': task.id, 'status': 'done'}) }}" style="display: inline;">
                                                <button type="submit" class="btn btn-success btn-sm" title="Terminer la t√¢che">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                {% endif %}
                                
                                <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-outline-warning btn-sm">
                                    <i class="fas fa-edit me-1"></i>Modifier
                                </a>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <form method="post" action="{{ path('app_task_delete', {'id': task.id}) }}" class="d-inline" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette t√¢che ?')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-trash me-1"></i>Supprimer
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="text-center py-5">
        <i class="fas fa-tasks fa-4x text-muted mb-3"></i>
        <h4 class="text-muted">Aucune t√¢che</h4>
        <p class="text-muted">Commencez par cr√©er votre premi√®re t√¢che !</p>
        <a href="{{ path('app_task_new') }}" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>Cr√©er une t√¢che
        </a>
    </div>
{% endif %}
{% endblock %}
