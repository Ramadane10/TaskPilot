                        <i class="fas fa-exclamation-triangle me-1"></i>Urgentes
                    </a>
                    <a href="{{ path('app_task_index', {'priority': 'high'}) }}" class="btn btn-outline-danger {{ app.request.query.get('priority') == 'high' ? 'active' : '' }}" title="T√¢ches importantes √† traiter en priorit√©">
                        <i class="fas fa-arrow-up me-1"></i>√âlev√©es
                    </a>
                    <a href="{{ path('app_task_index', {'priority': 'medium'}) }}" class="btn btn-outline-warning {{ app.request.query.get('priority') == 'medium' ? 'active' : '' }}" title="T√¢ches normales sans urgence particuli√®re">
