{% extends 'base.html.twig' %}

{% block title %}Détails de la tâche{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <!-- Détails de la tâche -->
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">
                            <i class="fas fa-tasks me-2"></i>{{ task.title }}
                        </h2>
                        <div class="d-flex gap-2">
                            <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-light btn-sm">
                                <i class="fas fa-edit me-1"></i>Modifier
                            </a>
                            <a href="{{ path('app_task_index') }}" class="btn btn-outline-light btn-sm">
                                <i class="fas fa-arrow-left me-1"></i>Retour
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5 class="text-muted mb-2">Statut</h5>
                            <span class="badge fs-6 
                                {% if task.status == 'todo' %}bg-secondary
                                {% elseif task.status == 'in_progress' %}bg-warning
                                {% elseif task.status == 'review' %}bg-info
                                {% elseif task.status == 'done' %}bg-success
                                {% endif %}">
                                {% if task.status == 'todo' %}À faire
                                {% elseif task.status == 'in_progress' %}En cours
                                {% elseif task.status == 'review' %}En révision
                                {% elseif task.status == 'done' %}Terminé
                                {% endif %}
                            </span>
                            
                            <!-- Boutons d'action rapide pour le statut -->
                            {% if task.status != 'done' %}
                                <div class="mt-2">
                                    <small class="text-muted d-block mb-1">Changer le statut :</small>
                                    <div class="btn-group btn-group-sm" role="group">
                                        {% if task.status == 'todo' %}
                                            <form method="post" action="{{ path('app_task_update_status', {'id': task.id, 'status': 'in_progress'}) }}" style="display: inline;">
                                                <button type="submit" class="btn btn-warning btn-sm">
                                                    <i class="fas fa-play me-1"></i>Démarrer
                                                </button>
                                            </form>
                                        {% elseif task.status == 'in_progress' %}
                                            <form method="post" action="{{ path('app_task_update_status', {'id': task.id, 'status': 'review'}) }}" style="display: inline;">
                                                <button type="submit" class="btn btn-info btn-sm">
                                                    <i class="fas fa-eye me-1"></i>En révision
                                                </button>
                                            </form>
                                        {% elseif task.status == 'review' %}
                                            <form method="post" action="{{ path('app_task_update_status', {'id': task.id, 'status': 'done'}) }}" style="display: inline;">
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    <i class="fas fa-check me-1"></i>Terminer
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </div>
                            {% else %}
                                <div class="mt-2">
                                    <span class="badge bg-success">
                                        <i class="fas fa-trophy me-1"></i>Tâche terminée !
                                    </span>
                                </div>
                            {% endif %}
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-muted mb-2">Priorité</h5>
                            <span class="badge fs-6 
                                {% if task.priority == 'low' %}bg-success
                                {% elseif task.priority == 'medium' %}bg-warning
                                {% elseif task.priority == 'high' %}bg-danger
                                {% elseif task.priority == 'urgent' %}bg-dark
                                {% endif %}">
                                {% if task.priority == 'low' %}Faible
                                {% elseif task.priority == 'medium' %}Moyenne
                                {% elseif task.priority == 'high' %}Élevée
                                {% elseif task.priority == 'urgent' %}Urgente
                                {% endif %}
                            </span>
                        </div>
                    </div>

                    {% if task.description %}
                    <div class="mb-3">
                        <h5 class="text-muted mb-2">Description</h5>
                        <p class="mb-0">{{ task.description|nl2br }}</p>
                    </div>
                    {% endif %}

                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="text-muted mb-2">Projet</h5>
                            <p class="mb-0">
                                <a href="{{ path('app_project_show', {'id': task.project.id}) }}" class="text-decoration-none">
                                    <i class="fas fa-project-diagram me-1"></i>{{ task.project.name }}
                                </a>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-muted mb-2">Assigné à</h5>
                            <p class="mb-0">
                                {% if task.assignedTo %}
                                    <i class="fas fa-user me-1"></i>
                                    {{ task.assignedTo.firstName }} {{ task.assignedTo.lastName }}
                                    <small class="text-muted">({{ task.assignedTo.email }})</small>
                                {% else %}
                                    <span class="text-muted">Non assigné</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>

                    {% if task.dueDate %}
                    <div class="mt-3">
                        <h5 class="text-muted mb-2">Date d'échéance</h5>
                        <p class="mb-0">
                            <i class="fas fa-calendar-alt me-1"></i>
                            {{ task.dueDate|date('d/m/Y H:i') }}
                            {% if task.dueDate < date() and task.status != 'done' %}
                                <span class="badge bg-danger ms-2">En retard</span>
                            {% endif %}
                        </p>
                    </div>
                    {% endif %}

                    <div class="mt-3">
                        <h5 class="text-muted mb-2">Informations</h5>
                        <p class="mb-0">
                            <small class="text-muted">
                                <i class="fas fa-clock me-1"></i>Créée le {{ task.createdAt|date('d/m/Y à H:i') }}
                                {% if task.updatedAt %}
                                    <br><i class="fas fa-edit me-1"></i>Modifiée le {{ task.updatedAt|date('d/m/Y à H:i') }}
                                {% endif %}
                            </small>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Section Commentaires -->
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-comments me-2"></i>Commentaires ({{ task.comments|length }})
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Formulaire d'ajout de commentaire -->
                    <div class="mb-4">
                        {{ form_start(commentForm, {'action': path('app_comment_new', {'taskId': task.id}), 'method': 'POST'}) }}
                            <div class="mb-3">
                                {{ form_label(commentForm.content, 'Ajouter un commentaire', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(commentForm.content, {'attr': {'class': 'form-control', 'rows': '3', 'placeholder': 'Écrivez votre commentaire...'}}) }}
                                {{ form_errors(commentForm.content) }}
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane me-2"></i>Publier le commentaire
                            </button>
                        {{ form_end(commentForm) }}
                    </div>

                    <!-- Liste des commentaires -->
                    {% if task.comments|length > 0 %}
                        <div class="comments-list">
                            {% for comment in task.comments %}
                                <div class="comment-item border-bottom pb-3 mb-3">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                                <i class="fas fa-user"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0">{{ comment.author.firstName }} {{ comment.author.lastName }}</h6>
                                                <small class="text-muted">{{ comment.createdAt|date('d/m/Y à H:i') }}</small>
                                            </div>
                                        </div>
                                        {% if app.user == comment.author or is_granted('ROLE_ADMIN') %}
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                    <i class="fas fa-ellipsis-v"></i>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li><a class="dropdown-item" href="{{ path('app_comment_edit', {'id': comment.id}) }}">
                                                        <i class="fas fa-edit me-2"></i>Modifier
                                                    </a></li>
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li><a class="dropdown-item text-danger" href="{{ path('app_comment_delete', {'id': comment.id}) }}" 
                                                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?')">
                                                        <i class="fas fa-trash me-2"></i>Supprimer
                                                    </a></li>
                                                </ul>
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="comment-content">
                                        <p class="mb-0">{{ comment.content|nl2br }}</p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-comments fa-3x mb-3"></i>
                            <p>Aucun commentaire pour le moment.<br>Soyez le premier à commenter !</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Actions rapides -->
            <div class="card shadow mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-cogs me-2"></i>Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Modifier la tâche
                        </a>
                        <a href="{{ path('app_project_show', {'id': task.project.id}) }}" class="btn btn-outline-primary">
                            <i class="fas fa-project-diagram me-2"></i>Voir le projet
                        </a>
                        {% if task.assignedTo %}
                        <a href="#" class="btn btn-outline-info">
                            <i class="fas fa-user me-2"></i>Contacter l'assigné
                        </a>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Statistiques -->
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>Statistiques
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="border-end">
                                <h4 class="text-primary mb-0">{{ task.comments|length }}</h4>
                                <small class="text-muted">Commentaires</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <h4 class="text-success mb-0">
                                {% if task.status == 'done' %}100%
                                {% elseif task.status == 'review' %}75%
                                {% elseif task.status == 'in_progress' %}50%
                                {% else %}0%
                                {% endif %}
                            </h4>
                            <small class="text-muted">Progression</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 